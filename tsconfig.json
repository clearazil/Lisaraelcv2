{
  "compilerOptions": {
    "target": "es2022",
    "experimentalDecorators": true,
    "module": "CommonJS",
    "rootDir": "./",
    "moduleResolution": "node",
    "baseUrl": "./",
     "paths": {
      "@components/*": ["app/components/*"],
      "@config/*": ["app/config/*"],
      "@database/*": ["app/database/*"]
     },
    "typeRoots": [
      "node_modules/@types"
    ],
    "resolveJsonModule": true,
    "sourceMap": false, 
    "outDir": "./compiled/",
    "removeComments": false,
    "importHelpers": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "files": [
    "app/index.ts"
  ],
  "include": [
    "./**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
